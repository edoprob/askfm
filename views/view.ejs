<%- include('partials/header.ejs') %>
<%- include('partials/navbar.ejs') %>
<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h3><%= ask.title %></h3>
        </div>
        <div class="card-body">
            <span><%= ask.description %></span>
        </div>
    </div>
    <hr>
    
    <form method="POST" action="/receiveAnswer">
        <label>Your name</label>
        <input class="form-control" placeholder="Type here..." name="name"><br>
        <label>Answer</label>
        <textarea class="form-control" placeholder="Type here..." name="description"></textarea><br>
        <input hidden type="number" value="<%= ask.id %>" name="askId">
        <a href=""><button class="btn btn-primary">Responder</button></a>       
    </form>
    <hr>
    <% answers.forEach(function(answer){ %>
    <h5><%= answer.name %></h5>
    <p><%= answer.description %></p>
    <hr>
    <% }) %>

    
</div>
<%- include('partials/footer.ejs') %>